<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sangeet"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Sangeet" />
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>




        <activity
            android:name=".view.SearchActivity"
            android:exported="true"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.Sangeet" />

        <activity
            android:name=".view.PlaylistActivity"
            android:exported="true"
            android:label="@string/title_activity_playlist"
            android:theme="@style/Theme.Sangeet" />

        <activity
            android:name=".view.PlayingNowActivity"
            android:exported="true"
            android:label="@string/title_activity_playing_now"
            android:theme="@style/Theme.Sangeet" />

        <activity
            android:name=".view.MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.Sangeet" />

        <activity
            android:name=".view.LibraryActivity"
            android:exported="true"
            android:label="@string/title_activity_library"
            android:theme="@style/Theme.Sangeet" />

    </application>

</manifest>